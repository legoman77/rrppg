#!/usr/bin/env python3
import colors as c
import random
import battle
import getch

# Player's stats

p_health = 100
p_magic = 10
p_offense = 15
p_defense = 0
    
# Enemies' stats
    
e_health = 20
e_magic = 0
e_offense = 10
e_defense = 5

# Items

potion_count = 0
b_count = 0

# Floors

floors = random.randint(1,10)

# Creates dungeon

w = 5
h = 5

dungeon = [[0 for x in range(w)]for y in range (h)]

# Generates dungeon

def generate():
    
    x = 4
    y = 4

    while x > -6:
        while y > -6:
            dungeon[x][y] = random.randint(0,3)
            y -= 1
        x -= 1
        y = 4

    dungeon[0][0] = 0

    # Places staircase

    while True:
        exit_x = random.randrange(-5,5)
        exit_y = random.randrange(-5,5)
        if exit_x == 0 and exit_y == 0:
            pass
        else:
            dungeon[exit_x][exit_y] = 4 
            break

generate()

# Places player

px = 0
py = 0
ptile = dungeon[px][py]

print(c.clear)

print("You find yourself in a dark dungeon.")
print("You think you should try to find a way out.")

while True:

    # Choosing a direction
    
    print("In which direction would you like to move?  (Use WASD).")
    print("Or, press p to use a potion.")
    print("Your stats: ")
    print("Health: " + str(p_health))
    print("Magic : " + str(p_magic))
    print("Offense: " + str(p_offense))
    print("Defense: " + str(p_defense))
    print("Potions: " + str(potion_count))
    print("Bombs: " + str(b_count))
    direction = getch.getch()
    print(c.clear)

    # East

    if direction == "d":
        px += 1
        if px >= 3:
            print("You try to move east, but run into the dungeon boundary.")
            px -= 1
        else:
            ptile = dungeon[px][py]
            if ptile == 1:
                print("You try to move east, but run into a wall.")
                print("Would you like to destroy the wall with a bomb?")
                print("(Press 1 to use a bomb, or press anything else to not use one.)")
                print("Bombs: " + str(b_count))
                if b_count == 0:
                    print("You don't have any bombs!")
                else:
                    b_choice = input("> ")
                    print(c.clear)
                    if b_choice == "1":
                        b_count -= 1
                        dungeon[px][py] = 0
                        print("You set off a bomb, destroying the wall.")
                px -= 1
            elif ptile == 2:
                print("You move east one tile.")
                pickup_chance = random.randint(1,5)
                if pickup_chance == 5:
                    print("You find a potion on the ground.")
                    print("You pick up the potion.")
                    potion_count += 1
                dungeon[px][py] = 0
            elif ptile == 3:
                print("You move east one tile.")
                pickup_chance = random.randint(1,10)
                # if pickup_chance == 10:
                print("You find a bomb on the ground.")
                print("You pick up the bomb.")
                b_count += 1
                dungeon[px][py] = 0
            else:
                print("You move east one tile.")
    
    # West

    elif direction == "a":
        px -= 1
        if px <= -3:
            print("You try to move west, but run into the dungeon boundary.")
            px += 1
        else:
            ptile = dungeon[px][py]
            if ptile == 1:
                print("You try to move west, but run into a wall.") 
                print("Would you like to destroy the wall with a bomb?")
                print("(Press 1 to use a bomb, or press 2 to not use one.)")
                print("Bombs: " + str(b_count))
                if b_count == 0:
                    print("You don't have any bombs!")
                else:
                    b_choice = getch.getch()
                    print(c.clear)
                    if b_choice == "1":
                        b_count -= 1
                        dungeon[px][py] = 0
                        print("You set off a bomb, destroying the wall.")
                px += 1
                ptile = dungeon[px][py] 
            elif ptile == 2:
                print("You move west one tile.")
                pickup_chance = random.randint(1,5)
                if pickup_chance == 5:
                    print("You find a potion on the ground.")
                    print("You pick up the potion.")
                    potion_count += 1
                dungeon[px][py] = 0 
            elif ptile == 3:
                print("You move west one tile.") 
                # pickup_chance = random.randint(1,10)
                # if pickup_chance == 10:
                print("You find a bomb on the ground.")
                print("You pick up the bomb.")
                b_count += 1
                dungeon[px][py] = 0
            else:
                print("You move west one tile.")
    
    # North

    elif direction == "w":
        py += 1
        if py >= 3:
            print("You try to move north, but run into the dungeon boundary.")
            py -= 1
        else:
            ptile = dungeon[px][py] 
            if ptile == 1:
                print("You try to move north, but run into a wall.") 
                print("Would you like to destroy the wall with a bomb?")
                print("(Press 1 to use a bomb, or press 2 to not use one.)")
                print("Bombs: " + str(b_count))
                if b_count == 0:
                    print("You don't have any bombs!")
                else:
                    b_choice = getch.getch()
                    print(c.clear)
                    if b_choice == "1":
                        b_count -= 1
                        dungeon[px][py] = 0
                        print("You set off a bomb, destroying the wall.")
                py -= 1
                ptile = dungeon[px][py] 
            elif ptile == 3:
                print("You move north one tile.")
                # pickup_chance = random.randint(1,10)
                # if pickup_chance == 10:
                print("You find a bomb on the ground.")
                print("You pick up the bomb.")
                b_count += 1
                dungeon[px][py] = 0
            elif ptile == 2:
                print("You move north one tile.") 
                pickup_chance = random.randint(1,5)
                if pickup_chance == 5:
                    print("You find a potion on the ground.")
                    print("You pick up the potion.")
                    potion_count += 1
                dungeon[px][py] = 0
            else:
                print("You move north one tile.")

    # South

    elif direction == "s":
        py -= 1
        if py <= -3:
            print("You try to move south, but run into the dungeon boundary.")
            py += 1
        else:
            ptile = dungeon[px][py]
            if ptile == 1:
                print("You try to move south, but run into a wall.")
                print("Would you like to destroy the wall with a bomb?")
                print("(Press 1 to use a bomb, or press 2 to not use one.)")
                print("Bombs: " + str(b_count))
                if b_count == 0:
                    print("You don't have any bombs!")
                else:
                    b_choice = getch.getch()
                    print(c.clear)
                    if b_choice == "1":
                        b_count -= 1
                        dungeon[px][py] = 0
                        print("You set off a bomb, destroying the wall.")
                py += 1
                ptile = dungeon[px][py]
            elif ptile == 2:
                print("You move south one tile.")
                pickup_chance = random.randint(1,5)
                if pickup_chance == 5:
                    print("You find a potion on the ground.")
                    print("You pick up the potion.")
                    potion_count += 1
                dungeon[px][py] = 0
            elif ptile == 3:
                print("You move south one tile.") 
                # pickup_chance = random.randint(1,10)
                # if pickup_chance == 10:
                print("You find a bomb on the ground.")
                print("You pick up the bomb.")
                b_count += 1
                dungeon[px][py] = 0
            else:
                print("You move south one tile.")
    
    # Using a potion

    elif direction == "p":
        if potion_count > 0:
            if p_health >= 100:
                print("It won't have any effect.")
            else:
                p_health += 20
                potion_count -= 1
                if p_health > 100:
                    p_health = 100
                print("You drink the potion.")
                print("20 HP restored!")
        else:
            print("You don't have any potions.")

    # Invalid command

    else:
        print("That is not a valid command.")
    
    # Battle
    
    battle_chance = random.randrange(0,11)
    if battle_chance == 10:
        print("You encounter a Slime!")
        while True:
            print("Health: " + str(p_health))
            print("Magic: " + str(p_magic))
            print("Offense: " + str(p_offense))
            print("Defense: " + str(p_defense))
            print("Potions: " + str(potion_count))
            print("What will you do?")
            print("1: Fight")
            print("2: Spell")
            print("3: Potion")
            print("4: Run")
            command = getch.getch()
            print(c.clear)
                    
            # Fight
        
            if command == "1":
                hit_chance = random.randint(0,10)
                if hit_chance == 10:
                    print("You miss!")
                else:
                    p_damage = p_offense - e_defense
                    e_health -= p_damage
                    print("You attack the Slime!")
                    print("The Slime takes " + str(p_damage) + " damage!")
                    if e_health <= 0:
                        print("The Slime dies!")
                        print("You win the battle!")
                        b_chance = random.randint(1,10)
                        if b_chance == 10:
                            b_count += 1
                            print("The Slime drops a bomb!")
                        p_chance = random.randint(1,10)
                        if p_chance == 10:
                            potion_count += 1
                            print("The Slime drops a potion!")
                        e_health = 20
                        break
                
                hit_chance = random.randint(1,10)
                if hit_chance == 10:
                    print("The Slime misses!")
                else:
                    e_damage = e_offense - p_defense
                    p_health -= e_damage
                    print("The Slime attacks you!")
                    print("You take " + str(e_damage) + " damage!")
                    if p_health <= 0:
                        print("You die...")
                        print("GAME OVER")
                        break
            
            # Spell

            elif command == "2":
                while True:
                    print("Which spell do you want to use?")
                    print("1: Fire")
                    print("2: Heal")
                    spell = getch.getch()
                    if spell == "1":
                        if p_magic < 5:
                            print(c.clear)
                            print("You don't have enough magic!")
                            break
                        else:
                            print(c.clear)
                            p_magic -= 5
                            p_damage = 20
                            e_health -= p_damage
                            print("You use Fire!")
                            print("The Slime takes " + str(p_damage) + " damage!")
                            if e_health <= 0:
                                print("The Slime was defeated!")
                                print("You won the battle!")
                                b_chance = random.randint(1,10)
                                if b_chance == 10:
                                    b_count += 1
                                    print("The Slime dropped a bomb!")
                                p_chance = random.randint(1,10)
                                if p_chance == 10:
                                    potion_count += 1
                                    print("The Slime dropped a potion!")
                                break
                            else:
                                hit_chance = random.randint(1,10)
                                if hit_chance == 10:
                                    print("The Slime missed!")
                                else:
                                    e_damage = e_offense - p_defense
                                    p_health -= e_damage
                                    print("The Slime attacks you!")
                                    print("You take " + str(e_damage) + " damage!")
                                    if p_health <= 0:
                                        print("You died!")
                                        print("GAME OVER")
                                        break
                    elif spell == "2":     
                        print(c.clear)
                        if p_magic < 1:
                            print("You don't have enough magic!")
                            break
                        else:
                            if p_health >= 100:
                                print("It won't have any effect.")
                                break
                            else:
                                p_magic -= 1
                                p_health += 20
                                if p_health > 100:
                                    p_health = 100
                                print("You use Heal!")
                                print("20 HP restored!")
                                hit_chance = random.randint(1,10)
                                if hit_chance == 10:
                                    print("The Slime missed!")
                                else:
                                    e_damage = e_offense - p_defense
                                    p_health -= e_damage
                                    print("The Slime attacks you!")
                                    print("You take " + str(e_damage) + " damage!")
                                    if p_health <= 0:
                                        print("You died!")
                                        print("GAME OVER")
                                    break
                    else:
                        print(c.clear)
                        print("That is not a valid command.")
                if e_health <= 0:
                    e_health = 20
                    break

            # Potion
            
            elif command == "3":
                if potion_count > 0:
                    if p_health >= 100:
                        print("It won't have any effect.")
                    else:
                        p_health += 20
                        potion_count -= 1
                        if p_health > 100:
                            p_health = 100
                        print("You drink the potion.")
                        print("20 HP restored!")                
                        hit_chance = random.randint(1,10)
                        if hit_chance == 10:
                            print("The Slime missed!")
                        else:
                            e_damage = e_offense - p_defense
                            p_health -= e_damage
                            print("The Slime attacks you!")
                            print("You take " + str(e_damage) + " damage!")
                            if p_health <= 0:
                                print("You died!")
                                print("GAME OVER")
                                break
                else:
                    print("You don't have any potions.")

            # Run
    
            elif command == "4":
                run_chance = random.randrange(0,2)
                if run_chance == 0:
                    print("Escaped!")
                    break
                else:
                    print("Couldn't escape!")
                    e_damage = e_offense - p_defense
                    p_health -= e_damage
                    print("The Slime attacks you!")
                    print("You take " + str(e_damage) + " damage!")
                    if p_health <= 0:
                        print("You died!")
                        print("GAME OVER")
                        break
                
            # Invalid command
    
            else:
                print("That is not a valid command.")
 
    # Game Over

    if p_health <= 0:
        break
    
    # Exit
    
    if ptile == 4:
        floors -= 1
        print("You find a staircase.")
        if floors == 0:
            print("You ascend the staircase and exit the dungeon.")
            print("A WINNER IS YOU!")
            break
        else:
            print("You ascend the staircase and enter the next floor of the dungeon.")
            generate()
            px = 0
            py = 0
            ptile = dungeon[px][py]
